<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Corner radius -->
    <corners
        android:radius="16dp" />

    <!-- Border/stroke -->
    <stroke
        android:width="2dp"
        android:color="#000000" />

    <!-- Padding inside the shape -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

</shape>
